<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="../scripts/index.js"></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meet Our Team</title>

    <link rel="stylesheet" href="../styles/root.css">
    <link rel="stylesheet" href="../styles/team.css">
    <link rel="stylesheet" href="../styles/teamMembers.css">
    <link rel="icon" href="../res/img/rubix.ico">
</head>

<body>
    <div id="overlay"></div>
    <div id="backtotop-holder"></div>
    <header id="header-holder"></header>
    <nav id="nav-holder"></nav>
    <nav id="mobile-nav-holder"></nav>
    <main>
        
        <%roles.forEach(function(clasa){%>
            <h1 class="section-title <%=clasa.className%>"><%=clasa.name%></h1>
            <div class="section-members">
            
                <% data.filter(function(filtru){return filtru.class == clasa.orderID}).forEach(function(item){%>
                    
                    <div class="card">
                        <div class="card-image">
                            <a class="link-read-more" href="/team/<%=item.shortID%>">
                                <img class="card-photo <%=clasa.className%>" src="../res/photo/team-members/<%= item.shortID %>.jpg" onerror="this.onerror=null; this.src='../res/photo/team-members/default.jpg'">
                                <div class="<%=clasa.className%> card-image-overlay"></div>
                                <div class="card-read-more">Read more</div>
                            </a>
                            
                        </div>
                        <div  class="card-info">
                            <div class="<%=clasa.className%> card-info-border">
                                <div class="card-text card-name <%=clasa.className%>"><%=item.name%></div>
                                <div class="card-text card-role"><%=item.role%></div>
                            </div>
                            
                        </div>
                    </div>
                <%})%>
            </div>
        <%})%>

    </main>
    <footer id="footer-holder"></footer>

</body>

</html>