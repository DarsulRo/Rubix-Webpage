<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="../scripts/index.js"></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=member.name%></title>

    <link rel="stylesheet" href="../styles/root.css">
    <link rel="stylesheet" href="../styles/profile.css">
    <link rel="icon" href="../res/img/rubix.ico">
</head>
<body>
    <div id="overlay"></div>
    <div id="backtotop-holder"></div>
    <header id="header-holder"></header>
    <nav id="nav-holder"></nav>
    <nav id="mobile-nav-holder"></nav>

    <main class="flex-row main">
        <section class="avatar">
            <img style="border-bottom: <%=Clasa.color%> solid 1rem" src="../res/photo/team-members/<%=member.shortID %>.jpg" onerror="this.onerror=null; this.src='../res/photo/team-members/default.jpg'">
        </section>
        <section class="content flex-column">
            <div class="flex-row badges">
                <div class="flex-row role" style="background-color: <%=Clasa.color%>">
                    <svg height="20px" width="20px">
                        <circle  cx="10px" cy="10px" r="10px"  style="fill:var(--mainwhite)"></circle>
                    </svg>
                    <h4>
                        <%=Clasa.name%>
                    </h4>
                </div>
                <%badges.forEach(function(item){%>
                    <div class="flex-row role" style="background-color: <%=Clasa.color%>">
                        <svg height="20px" width="20px">
                            <circle  cx="10px" cy="10px" r="10px"  style="fill:var(--mainwhite)"></circle>
                        </svg>
                        <h4>
                            <%=item.role%>
                        </h4>
                    </div>
                <%})%>
            </div>
            <h1 class="name">
                <%=member.name%>
            </h1>
            <h3 class="description">
                <%=member.description%>
            </h3>

            <div class="LINKS">
                <h1>Social Media</h1>

                <%if(member.links){%>
                    <div class="flex-row links">
                        <%member.links.forEach(function(item){%>
                            <a class="flex-row link" href="<%=item.url%>" target="_blank">
                                <img src="../res/img/media.png" alt="">
                                <h4><%=item.name%></h4>
                            </a>
                        <%})%>
                        
                    </div>
                <%}%>
            </div>
            
        </section>
        
    </main>

    <footer id="footer-holder"></footer>
</body>
</html>